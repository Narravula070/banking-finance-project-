pipeline {
  agent any

  tools {
    maven 'M2_HOME'
  }

  stages {
    stage('Checkout Code') {
      steps {
        echo 'Checking out the source code from GitHub...'
        git 'https://github.com/Narravula070/banking-finance-project-.git'
      }
    }

    stage('Build with Maven') {
      steps {
        echo 'Packaging the application using Maven...'
        sh 'mvn clean package'
      }
    }

    stage('Build Docker Image') {
      steps {
        echo 'Building the Docker image...'
        sh 'docker build -t kranthi619/finance-me1 .'
      }
    }

    stage('Docker Login') {
      steps {
        echo 'Logging in to Docker Hub with hardcoded credentials...'
        sh '''
          docker login -u kranthi619 -p Kranthi123#
        '''
      }
    }

    stage('Push Docker Image') {
      steps {
        echo 'Pushing the Docker image to Docker Hub...'
        sh 'docker push kranthi619/finance-me1'
      }
    }
  }
}
